{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
      /* Base options */
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "target": "ES2022",
      "verbatimModuleSyntax": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",

      /* Strictness */
      "strict": true,
      "noUncheckedIndexedAccess": true,
    },
    "exclude": [
      "node_modules"
    ]
  }
